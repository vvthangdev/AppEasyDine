<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/apple_gray_light" />
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="@color/apple_gray" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/apple_white" />
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="@color/apple_gray" />
        </shape>
    </item>
</selector>
